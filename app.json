{
  "expo": {
    "name": "Palavreco",
    "slug": "palavreco",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "palavreco",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "description": "Descubra a palavra do dia! Um jogo de adivinhação de palavras em português, inspirado no Wordle. Teste seu vocabulário e divirta-se!",
    "keywords": ["palavra", "wordle", "jogo", "português", "adivinhação", "vocabulário"],
    "privacy": "public",
    "category": "games",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.palavreco.app",
      "buildNumber": "1",
      "infoPlist": {
        "CFBundleDisplayName": "Palavreco",
        "NSUserTrackingUsageDescription": "Este app não coleta dados pessoais ou rastreia usuários."
      }
    },
    "android": {
      "package": "com.palavreco.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#121213"
      },
      "edgeToEdgeEnabled": true,
      "permissions": []
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#121213"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
